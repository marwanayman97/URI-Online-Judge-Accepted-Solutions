#include <iostream>
#include <iomanip>
#include <math.h>

using namespace std;


int main(){
 
 int n,x;
 cin>>n;

 
 
 while(n!=0){
 	
 	
 	for(int i=1;i<=n;i++){
 		for(int j=1;j<=n;j++){
 			
 				x = i;
                if(j < x)
				x = j;
                if(n-i+1 < x)
				x = n-i+1;
                if(n-j+1 < x)
				x = n-j+1;
				cout<<setw(3)<<x;
				if(j<n)
				cout<<" ";
				else
				cout<<endl;
	 }
	 	if(i==n)
	 	cout<<endl;
	 }
 			
		 
		 
	 
 	
 	
 	
 	
 	cin>>n;
 }
	return 0;
}
