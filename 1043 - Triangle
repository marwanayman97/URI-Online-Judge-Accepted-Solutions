#include <iostream>
#include <iomanip>

using namespace std;

int main(){
 
 double A,B,C;
  cout << fixed << setprecision(1) ;
  cin>> A >> B >>C;
  
   if (A < B + C && B < A + C && C < A + B){
   
   cout << "Perimetro = " << A+B+C << endl;}
   else{
   	cout << "Area = " << C * ((A+B)/2) << endl;
   }
 
  
  return 0;
  }
